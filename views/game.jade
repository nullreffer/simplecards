extends layout

block includes
  script(type='text/javascript' src='/javascripts/jquery-3.5.0.min.js')
  script(type='text/javascript' src='/javascripts/game.js')

block content
  h1 Welcome to #{game.name}
  input(type="text" class="hidden" id="gameid" value=game._id)
  input(type="text" class="hidden" id="gamestatus" value=game.status)
  input(type="text" class="hidden" id="gamewinner" value=game.winner)
  div(id="board")
